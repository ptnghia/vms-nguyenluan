# Environment Configuration for VMS
# Copy this file to .env and update with your values

# ============================================
# General Settings
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_PASSWORD=vms_secure_pass_change_me_in_production
DATABASE_URL=postgresql://vms_user:vms_secure_pass_change_me_in_production@postgres:5432/vms

# ============================================
# Cache (Redis)
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# API Server
# ============================================
JWT_SECRET=change_this_to_random_64_char_string_in_production
CORS_ORIGIN=http://localhost:8080

# ============================================
# Frontend
# ============================================
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# ============================================
# Recording Engine
# ============================================
RECORDING_PATH=/data/recordings
TRANSCODE_PRESET=balanced
QSV_DEVICE=/dev/dri/renderD128
QSV_LOW_QUALITY=720p
QSV_HIGH_QUALITY=1440p

# ============================================
# Docker Build
# ============================================
BUILD_TARGET=development
